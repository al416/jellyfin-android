<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_navigation"
    app:startDestination="@id/home_fragment">

    <fragment android:id="@+id/home_fragment"
        android:name="org.jellyfin.client.android.ui.home.HomeFragment">
        <action android:id="@+id/action_movie_details"
            app:destination="@id/movie_details_fragment"/>
    </fragment>

    <fragment android:id="@+id/movie_details_fragment"
        android:name="org.jellyfin.client.android.ui.home.movie_details.MovieDetailsFragment">
        <argument android:name="uuid"
            app:argType="string"/>
    </fragment>
</navigation>